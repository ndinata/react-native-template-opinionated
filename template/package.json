{
  "name": "MyProject",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "git config --get core.hooksPath || husky install",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "pod-install": "bundle exec pod install --project-directory=./ios/",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "e2e:ios:debug": "detox build -c ios.debug && detox test -c ios.debug",
    "e2e:ios:release": "detox build -c ios.release && detox test -c ios.release",
    "e2e:android:debug": "detox build -c android.debug && detox test -c android.debug",
    "e2e:android:release": "detox build -c android.release && detox test -c android.release"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.15.5",
    "@react-native-community/netinfo": "^9.3.0",
    "@react-native-masked-view/masked-view": "^0.2.6",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/stack": "^6.0.11",
    "dayjs": "^1.8.35",
    "react": "18.2.0",
    "react-native": "0.71.8",
    "react-native-gesture-handler": "^2.2.0",
    "react-native-safe-area-context": "^4.3.3",
    "react-native-screens": "^3.3.0",
    "react-native-svg": "^13.2.0",
    "react-native-version-number": "^0.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "detox": "^19.0.0",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-rn": "^1.1.5",
    "jest": "^29.2.1",
    "jest-circus": "^29.2.1",
    "lint-staged": "^11.2.6",
    "metro-react-native-babel-preset": "0.73.9",
    "prettier": "^2.4.1",
    "react-native-svg-transformer": "^1.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "import-sort --write",
      "prettier --write",
      "eslint"
    ]
  },
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "rn"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "rn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@react-native-community",
    "overrides": [
      {
        "files": ["*.js", "*.ts", "*.tsx"],
        "plugins": ["react-native"],
        "rules": {
          "no-console": 1,
          "react-native/no-unused-styles": 1,
          "react-hooks/exhaustive-deps": 1,
          "@typescript-eslint/no-unused-vars": 1,
          "no-undef": 0
        }
      }
    ]
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "configurations": {
      "ios.debug": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "ios.release": {
        "device": "simulator",
        "app": "ios.release"
      },
      "android.debug": {
        "device": "emulator",
        "app": "android.debug"
      },
      "android.release": {
        "device": "emulator",
        "app": "android.release"
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/MyProject.app",
        "build": "xcodebuild -workspace ios/MyProject.xcworkspace -scheme MyProject -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
      },
      "ios.release": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/MyProject.app",
        "build": "xcodebuild -workspace ios/MyProject.xcworkspace -scheme MyProject -configuration Release -sdk iphonesimulator -derivedDataPath ios/build"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
      },
      "android.release": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd .."
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3_API_29"
        }
      }
    }
  }
}
